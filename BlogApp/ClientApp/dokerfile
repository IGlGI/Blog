FROM node:12.16.1-alpine As builder
WORKDIR /usr/src/app
COPY package.json package-lock.json ./
COPY angular.json ./
COPY ngsw-config.json ./
COPY tsconfig.json ./
COPY tsconfig.app.json ./
RUN npm install
COPY . .
RUN npm run build

FROM nginx:1.17.1-alpine
COPY --from=builder /usr/src/app/dist/blog/ /usr/share/nginx/html
